@model int
<td>
    <!-- Details Button -->
    <a asp-action="Details" asp-route-id="@Model" class="btn btn-warning"><i class="fas fa-eye"></i>Details</a>
</td>
<td>
    <!-- Update Button -->
    <a asp-action="Edit" asp-route-id="@Model" class="btn btn-success"><i class="fas fa-edit"></i>Update</a>
</td>
<td>
    <!-- Delete Button -->
    <form asp-action="Delete" asp-route-id="@Model" method="post" style="display:inline;">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this department?');"><i class="fa-solid fa-trash"></i>Delete</button>
    </form>
</td>
