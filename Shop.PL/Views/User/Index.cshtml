
@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2> All Users </h2>
<form method="post" action="@Url.Action("Index", "User")">
    <input type="text" name="SearchInput" placeholder="Search by name or email" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>


<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>UserName</th>
            <th>Name</th>
            <th>Email</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.FirstName</td>
                <td>@user.Email</td>
                <td>
                    <!-- Details Button -->
                    <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info">Details</a>
                </td>
                <td>
                    <!-- Update Button -->
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Update</a>
                </td>
                <td>
                    <!-- Delete Button -->
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this User?');">Delete</button>
                    </form>
                </td>
                
            </tr>
        }
    </tbody>
</table>


