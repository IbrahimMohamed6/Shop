@model DepartmentDetailsDto

@{
    Layout = "_Layout";
    ViewData["Title"] = "Details";
}
<div class="container mt-5">
    <h2 class="mb-4 text-primary">Details</h2>

    <!-- Nav tabs with custom styling -->
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab" href="#general" role="tab">
                <i class="bi bi-info-circle"></i> General
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#administration" role="tab">
                <i class="bi bi-gear"></i> Administration
            </a>
        </li>
    </ul>

    <!-- Tab panes with custom padding and borders -->
    <div class="tab-content mt-3 p-4 border rounded">
        <!-- General Tab -->
        <div class="tab-pane fade show active" id="general" role="tabpanel">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Id:</label>
                    <p class="form-control-plaintext">@Model.Id</p>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Name:</label>
                    <p class="form-control-plaintext">@Model.Name</p>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Code:</label>
                    <p class="form-control-plaintext">@Model.Code</p>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Description:</label>
                    <p class="form-control-plaintext">@Model.Description ?? "No description provided"</p>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Creation Date:</label>
                    <p class="form-control-plaintext">@Model.CreatedOn.ToString("yyyy-MM-dd")</p>

                </div>
            </div>
        </div>

        <!-- Administration Tab -->
        <div class="tab-pane fade" id="administration" role="tabpanel">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Created By:</label>
                    <p class="form-control-plaintext">@Model.CreatedBy</p>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Created On:</label>
                    <p class="form-control-plaintext">@Model.CreatedOn.ToString("g")</p>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Last Modified By:</label>
                    <p class="form-control-plaintext">@Model.LastModifiedBy</p>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Last Modified On:</label>
                    <p class="form-control-plaintext">@Model.LastModifiedOn.ToString("g")</p>
                </div>
            </div>
        </div>
    </div>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Buttons with spacing -->
    <div class="mt-4">
        <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-outline-primary me-2">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<style>
    .nav-tabs .nav-link {
        font-size: 18px;
        padding: 10px 20px;
        color: #0d6efd;
    }

        .nav-tabs .nav-link.active {
            background-color: #0d6efd;
            color: white;
        }

    .form-label {
        font-size: 16px;
    }

    .form-control-plaintext {
        font-size: 16px;
        color: #495057;
    }

    .btn-outline-primary, .btn-outline-secondary {
        font-size: 16px;
        padding: 10px 20px;
    }
</style>


