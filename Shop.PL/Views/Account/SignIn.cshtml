
@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayOut.cshtml";
}

<h1>SignIn</h1>

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SignIn" method="post">
			<div asp-validation-summary="ModelOnly"></div>

			<input class="text email" asp-for="Email" placeholder="Email" required="">
			<input class="text" asp-for="Password" placeholder="Password" required="">
			<div class="wthree-text">
				<label class="anim">
					<input type="checkbox" asp-for="RemeberMe" class="checkbox" required="">
					<span>I Agree To The Terms & Conditions</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<p>Dont have an Account? <a asp-action="SignUp">SIGNUP NOW!</a></p>
		<p><a asp-action="ForgetPassword">Forget Password</a></p>
	</div>
</div>
@section Scripts {
	@{

		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}

